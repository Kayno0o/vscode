{
  "publisher": "kayno0o",
  "name": "kvsc",
  "displayName": "KVSCode",
  "version": "0.0.1",
  "description": "Extension to create query, provider, etc. for Symfony projects",
  "author": {
    "name": "Kayno0o",
    "url": "https://github.com/kayno0o"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kayno0o/vscode"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "engines": {
    "vscode": "^1.102.0"
  },
  "activationEvents": [
    "onLanguage:php"
  ],
  "contributes": {
    "commands": [
      {
        "command": "kvsc.processor",
        "title": "KVSC: Processor"
      },
      {
        "command": "kvsc.provider",
        "title": "KVSC: Provider"
      },
      {
        "command": "kvsc.repository",
        "title": "KVSC: Repository"
      },
      {
        "command": "kvsc.entity",
        "title": "KVSC: Entity"
      },
      {
        "command": "kvsc.toggleQuotes",
        "title": "KVSC: Single to Double Quote"
      },
      {
        "command": "kvsc.getterSetter",
        "title": "KVSC: Generate Getter/Setter"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "kvsc.repository",
          "when": "explorerResourceIsFolder && resourcePath =~ /[\\/]src[\\/]Repository$/",
          "group": "navigation"
        },
        {
          "command": "kvsc.entity",
          "when": "explorerResourceIsFolder && resourcePath =~ /[\\/]src[\\/]Entity$/",
          "group": "navigation"
        },
        {
          "command": "kvsc.provider",
          "when": "explorerResourceIsFolder && resourcePath =~ /[\\/]src[\\/]State$/",
          "group": "navigation"
        },
        {
          "command": "kvsc.processor",
          "when": "explorerResourceIsFolder && resourcePath =~ /[\\/]src[\\/]State$/",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "key": "ctrl+alt+'",
        "command": "kvsc.toggleQuotes",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "nr compile",
    "compile": "bun x tsup",
    "pretest": "nr compile && nr lint",
    "lint": "bunx eslint src --ext ts",
    "test": "vscode-test",
    "lint:fix": "bunx eslint . --fix",
    "check": "tsc --noEmit --strict"
  },
  "dependencies": {
    "@kaynooo/utils": "^1.3.4"
  },
  "devDependencies": {
    "@kaynooo/eslint": "^1.1.13",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.2.0",
    "@types/vscode": "^1.102.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.32.0",
    "tsup": "^8.5.0",
    "vscode": "^1.1.37"
  }
}
